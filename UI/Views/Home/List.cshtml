@model IEnumerable<UI.ViewModels.CampaignViewModel>

@{
    ViewData["Title"] = "List";
}

<h1>Wszystkie kampanie</h1>

<p>
    <a asp-action="Create">Utwórz nową!</a>
</p>

@if (ViewBag.DeleteError == true)
{
    <div class="form-group">
        <span class="text-danger"> Niestety nastąpił błąd podczas usuwania!.</span>
    </div>
}
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Leader)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Leader)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a asp-action="PDF">Pobierz PDF!</a>
    </p>
}
else
{
    <div class="form-group">
        <span class="text-danger"> Niestety jeszcze nie posiadasz kampani</span>
    </div>
}
